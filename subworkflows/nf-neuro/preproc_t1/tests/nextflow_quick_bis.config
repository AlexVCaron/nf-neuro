process {
    publishDir = { "${params.outdir}/${task.process.tokenize(':')[-1].tokenize('_')[0].toLowerCase()}" }
    withName: "BETCROP_SYNTHBET" {
        memory = "8G"
        ext.nocsf = true
    }
}

params.run_denoising = false
params.run_N4 = true
params.run_resampling = false
params.run_bet = true
params.run_synthbet = true
params.run_crop = false
