                    .every{ channel -> ["image_nlmeans",
                                        "image_N4",
                                        "image_resample",
                                        "image_bet",
                                        "mask_bet",
                                        "crop_box"].contains(channel.key)
                        ? channel.value.size() == 0
                        : channel.value.every{ item ->
